{
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        },
    },

    "env": {
        "browser": true,
        "node": true
    },
    "parser": "babel-eslint",
    "rules": {
        "quotes": [2, "single"],
        "strict": [2, "never"],
        "semi": ["error", "always"],
        "indent": ["error", 4],
        "eqeqeq": ["error", "always"],
        "no-multi-spaces": "error",
        "keyword-spacing": "error",
        "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }]
    }
}
